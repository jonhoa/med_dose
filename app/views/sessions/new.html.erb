<div class ="container-fluid-1" style="padding:100px 10px 100px 140px; border:orange; border-width:5px; border-style:solid;">
<%= image_tag '/img1.png', width: '120em', height: '180em', align: "right"%>
<h1 style="align:center;"> Login </h1>
<%= form_tag "/login", method: :post do%>
<div>
<%= label_tag :email%>
<%= text_field_tag :email%>
</div>
<div>
<%= label_tag :password%>
<%= password_field_tag :password%>
</div>
<%= submit_tag "Login", class:"btn btn-primary"%>
<%= link_to "Forgot Password?", "/signup"%>
<%end%>
<br/>
</div>